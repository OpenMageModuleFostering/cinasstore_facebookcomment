<?xml version="1.0"?>
<config>
    <modules>
        <Cinasstore_Facebookcomment>
            <version>0.1.1</version>
        </Cinasstore_Facebookcomment>
    </modules>
    <frontend>
        <routers>
            <facebookcomment>
                <use>standard</use>
                <args>
                    <module>Cinasstore_Facebookcomment</module>
                    <frontName>facebookcomment</frontName>
                </args>
            </facebookcomment>
        </routers>
        <layout>
            <updates>
                <facebookcomment>
                    <file>facebookcomment.xml</file>
                </facebookcomment>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<facebookcomment>
				<use>admin</use>
				<args>
					<module>Cinasstore_Facebookcomment</module>
					<frontName>facebookcomment</frontName>
				</args>
			</facebookcomment>
        </routers>
    </admin>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<facebookcomment translate="title">
											<title>Facebook comment</title>
											<sort_order>50</sort_order>
										</facebookcomment>									
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>	
		<layout>
			<updates>
				<facebookcomment>
					<file>facebookcomment.xml</file>
				</facebookcomment>
			</updates>
		</layout>
		<events>
			<controller_action_predispatch_adminhtml>
				<observers>
					<cinasstore_facebookcomment_observer>
						<type>singleton</type>
						<class>facebookcomment/observer</class>
						<method>controller_action_predispatch_adminhtml</method>
					</cinasstore_facebookcomment_observer>
		       </observers>				
			</controller_action_predispatch_adminhtml>
		</events>		
    </adminhtml>   
    <global>
		<events>
			<admin_system_config_changed_section_facebookcomment>
				<observers>
		          <cinasstore_facebookcomment_observer>
		            <type>singleton</type>
		            <class>facebookcomment/observer</class>
		            <method>saveFacebookcommentConfig</method>
		          </cinasstore_facebookcomment_observer>
		       </observers>			
			</admin_system_config_changed_section_facebookcomment>				
		</events>
        <models>
            <facebookcomment>
                <class>Cinasstore_Facebookcomment_Model</class>
                <resourceModel>facebookcomment_mysql4</resourceModel>
            </facebookcomment>
            <facebookcomment_mysql4>
                <class>Cinasstore_Facebookcomment_Model_Mysql4</class>
                <entities>
                    <facebookcomment>
                        <table>facebookcomment</table>
                    </facebookcomment>
                </entities>
            </facebookcomment_mysql4>
        </models>
        <resources>
            <facebookcomment_setup>
                <setup>
                    <module>Cinasstore_Facebookcomment</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </facebookcomment_setup>
            <facebookcomment_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </facebookcomment_write>
            <facebookcomment_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </facebookcomment_read>
        </resources>
        <blocks>
            <facebookcomment>
                <class>Cinasstore_Facebookcomment_Block</class>
            </facebookcomment>
        </blocks>
        <helpers>
            <facebookcomment>
                <class>Cinasstore_Facebookcomment_Helper</class>
            </facebookcomment>
        </helpers>
    </global>
	<default>
		<facebookcomment>
			<general>
				<show_number_of_comment>10</show_number_of_comment>
				<width_of_comment_box>642</width_of_comment_box>
				<language>en_US</language>
				
			</general>
		</facebookcomment>
	</default>
</config>